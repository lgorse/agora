<%= form_for @motion do |motion| %>
<%= render 'layouts/error_messages', :object => motion.object %>
<ul>
	<li>
<%= motion.text_field :title, :placeholder => "Subject (max #{TITLE_CHAR_MAX} characters)", :size => 44 %>
</li>
<li>
	<%= motion.text_area :details, :placeholder => "Write details (max #{DETAILS_CHAR_MAX} characters)", :size => '50x10' %>
</li>
<li>
	<p>
		<%= motion.label :expires_at, "Expires in" %>
		<%= motion.select(:expires_at, expiration_times, :selected => expiration_times[2]) %><%= "When should voting end?" %>
	</p>
</li>
<li>
<p><%= motion.submit "Create" %></p></li>
</ul>
<% end %>
