$(function(){
	var motion = $("#<%= params[:reply][:motion_id] %>.motion");
	var motion_holder = motion.parent();
	motion_holder.find(".new_reply").remove();
	motion_holder.find(".reply_list").
		html("<%= escape_javascript(render :partial => 'replies/reply', :collection => @reply.motion.replies, :as => :reply) %>");
	

});