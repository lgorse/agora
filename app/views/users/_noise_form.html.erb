	<% else %>
		<% @noise_user = NoiseUser.new %>
		<%= form_for @noise_user do |noise_user| %>
			<%= noise_user.hidden_field :noise_id, :value => @noise.id %>
			<%= noise_user.submit "Ssshhh" %>
		<% end %>
	<% end %>	
<% else %>
<%  %>
	<%= form_for @noise do |noise| %>
		<%= noise.submit "Ssshhh" %>
	<% end %>
<% end %>