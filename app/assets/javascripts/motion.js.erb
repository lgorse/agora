$(function(){
	$(".motion_stub").click(function(e){
		$(this).remove();
		$("#new_motion_holder").show();
		$("#motion_title").focus();
	});
	$("#motion_anonymous").change(function(){
		if(this.checked){
			$(".anonymous_toggle_text").text("No-one will know you started this motion");
		}else{
			$(".anonymous_toggle_text").text("Your name will appear under this motion");
		}
	});
	$(".example_motions :input").attr("disabled", true);


});